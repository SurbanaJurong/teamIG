<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/margin_between_contents">
    <ImageView
        android:id="@+id/iv_item_upload_photo"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:scaleType="fitCenter"/>

    <ImageButton
        style="@style/Widget.AppCompat.Button.Borderless.Colored"
        android:id="@+id/ib_item_upload_photo"
        android:src="@drawable/ic_clear_white_24dp"
        android:layout_alignEnd="@+id/iv_item_upload_photo"
        android:layout_alignParentBottom="true"
        android:layout_width="@dimen/size_touch_avatar"
        android:layout_height="@dimen/size_touch_avatar"/>
</RelativeLayout>