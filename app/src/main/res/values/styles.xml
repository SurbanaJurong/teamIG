<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>
    <style name="TextContentSecondaryStyle">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/secondary_text</item>
    </style>
    <style name="TextContentPrimaryStyle">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/primary_text</item>
    </style>

    <style name="EditTextPrimaryStyle">
        <item name="android:padding">5dp</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/primary_text</item>
    </style>
    <style name="EditTextNoLineStyle">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/primary_text</item>
        <item name="android:background">@android:color/transparent</item>
    </style>

    <style name="TextSubtitleStyle">
        <item name="android:textSize">16sp</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textColor">@color/colorPrimary</item>
    </style>
    <style name="CircleTextStyle">
        <item name="android:layout_marginRight">@dimen/activity_horizontal_margin</item>
        <item name="android:layout_width">@dimen/size_text_circle</item>
        <item name="android:layout_height">@dimen/size_text_circle</item>
    </style>

    <style name="CircleImageSmallStyle">
        <item name="android:layout_width">@dimen/size_text_circle</item>
        <item name="android:layout_height">@dimen/size_text_circle</item>
        <item name="android:scaleType">fitCenter</item>
    </style>

    <style name="CircleImageStyle">
        <item name="android:layout_width">70dp</item>
        <item name="android:layout_height">70dp</item>
        <item name="android:scaleType">fitXY</item>
    </style>

    <style name="SectionDividerStyle">
        <item name="android:background">@color/divider</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
    </style>
</resources>
